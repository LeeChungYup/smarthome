<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <ImageView
        android:id="@+id/keti_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/keti_logo_small"
        android:contentDescription="@string/unknown" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/server_ip_edit"
        android:layout_below="@+id/keti_logo"
        android:layout_marginTop="17dp"
        android:text="Home Server IP" />

    <EditText
        android:id="@+id/server_ip_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/keti_logo"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:text="115.95.190.117" >
    </EditText>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/server_port_edit"
        android:layout_below="@+id/server_ip_edit"
        android:layout_marginTop="24dp"
        android:text="Home Server Port" />

    <EditText
        android:id="@+id/server_port_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/server_ip_edit"
        android:layout_below="@+id/server_ip_edit"
        android:layout_marginTop="48dp"
        android:ems="10"
        android:text="2727" >
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/server_port_edit"
        android:layout_below="@+id/server_port_edit"
        android:layout_marginTop="17dp"
        android:text="Mashpup-DB URL" />

    <EditText
        android:id="@+id/mashup_db_url_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:ems="10"
        android:text="http://115.95.190.117:1988/" />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/mashup_db_url_edit"
        android:layout_below="@+id/mashup_db_url_edit"
        android:layout_marginTop="17dp"
        android:text="ID" />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_id"
        android:layout_below="@+id/text_id"
        android:ems="10"
        android:text="user2" />

    <TextView
        android:id="@+id/text_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edit_id"
        android:layout_below="@+id/edit_id"
        android:layout_marginTop="17dp"
        android:text="PASSWORD" />

    <EditText
        android:id="@+id/edit_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_password"
        android:layout_below="@+id/text_password"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Login" />

    <Button
        android:id="@+id/test_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/login_btn"
        android:layout_marginBottom="25dp"
        android:text="Test Login" />

</RelativeLayout>